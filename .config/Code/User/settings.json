{
  "vim.easymotion"           : true,
  "vim.incsearch"            : true,
  "vim.useSystemClipboard"   : true,
  "vim.useCtrlKeys"          : true,
  "vim.hlsearch"             : true,
  "vim.surround"             : true,
  "vim.insertModeKeyBindings": [
    {
      "before":["<C-d>"],
      "after":["<Esc>","l","a"]
    },
    {
      "before":["w", "w"],
      "after":["<Esc>", "f", ")","a"]
    },
    {
      "before":["q", "q"],
      "after":["<Esc>", "f", "}","a"]
    },
    {
      "before":["q", "w"],
      "after":["<Esc>", "f", "]","a"]
    },
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    },
    {
      "before": ["k", "k"],
      "after": ["<Esc>"]
    },
    {
      "before" :["j","k"],
      "after" :["<Esc>", "$", "a", ";","<Esc>"],

    },
  ],
    "vim.visualModeKeyBindings": [
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before":["<C-d>"],
      "after":["<Esc>","l","a"]
    },
    {"before":["F", "F"],
      "after":["c", "i", "("]
    },
    {"before":["R", "R"],
      "after":["c", "i", "]"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<C-q>"],
      "after":["f",">","a"]
    },
  ],
  // "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.textwidth": 100, "vim.highlightedyank.color"   : "#0c0907",
  "vim.highlightedyank.enable"  : true,
  "vim.highlightedyank.duration": 400,
  // Styles-------------------------------------
  // "diffEditor.renderIndicators": false,

  "editor.guides.indentation"    : false,
  "editor.foldingHighlight"      : false,
  "editor.occurrencesHighlight"  : false,
  "workbench.colorCustomizations": {

    "list.errorForeground"                     : "#ffffff",
    "list.warningForeground"                   : "#f3fdff",
    "gitDecoration.modifiedResourceForeground" : "#fcedad",
    "gitDecoration.untrackedResourceForeground": "#707070",

    // "activityBar.activeBorder": "#fff",
    // "activityBar.activeBorder": "#fff",
    "scrollbarSlider.background": "#bbf1f834",     // last two digits are the alpha value
    "selection.background"                            : "#4666f3",
    "editor.selectionForeground"                      : "#5f82f7",
    "editorOverviewRuler.selectionHighlightForeground": "#7071c0",
    "editorCursor.foreground"                         : "#000000",
    "terminalCursor.foreground"                       : "#008cff",
    "editorCursor.background"                         : "#0004ff",
    "editor.focusedStackFrameHighlightBackground"     : "#8b50cf00",
    "editor.lineHighlightBackground"                  : "#f84e0b00",
    "editor.selectionBackground"                      : "#140d258e",
    "editor.lineHighlightBorder"                      : "#ff000000",
    "editorBracketMatch.background"                   : "#01101a",
    "editorBracketMatch.border"                       : "#978343",
    "editor.hoverHighlightBackground"                 : "#e0262600",
    "editor.wordHighlightBorder"                      : "#e0262600",
    "editor.findMatchHighlightBackground"             : "#321888f3",
    "editor.selectionHighlightBackground"             : "#0000003d",
  },

  // PRETTIER--------------------------------------------------------
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave"    : false,
  // PRETTIER--------------------------------------------------------
  "editor.minimap.enabled"       : false,
  "window.customMenuBarAltFocus" : false,
  "window.enableMenuBarMnemonics": false,
  "window.titleBarStyle"         : "custom",
  "editor.multiCursorModifier"   : "ctrlCmd",
  "[cpp]"                        : {
    "editor.wordBasedSuggestions": true,
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true,
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[jsonc]"                    : {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  "[markdown]"            : {
    "editor.wordWrap"        : "wordWrapColumn",
    "editor.wrappingIndent"  : "same",
    "editor.wordWrapColumn"  : 80,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
  },
  "explorer.confirmDragAndDrop": false,
  "[python]":{
  "editor.defaultFormatter": "ms-python.python"
  },

  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    // "editor.codeActionsOnSave": {
    //         "source.fixAll.eslint": true
    //     },
    //     "editor.formatOnSave": false
    
  },
  "files.associations"   :  {
    "*.md": "markdown"
  },
  "editor.unfoldOnClickAfterEndOfLine": false,
  "editor.largeFileOptimizations"     : false,
  "terminal.integrated.inheritEnv"    : false,
  "python.languageServer"             : "Pylance",
  "vim.foldfix"                       : true,
  "C_Cpp.updateChannel"               : "Insiders",
  "latex-workshop.view.pdf.viewer"    : "tab",
  "breadcrumbs.enabled"               : true,
  "window.menuBarVisibility"          : "hidden",
  "workbench.activityBar.visible"     : true,
  // Cosmetics-----------------------------------------------
"better-comments.tags": [
  {
    "tag"            : "!",
    "color"          : "#fffacb",
    "strikethrough"  : false,
    "underline"      : false,
    "backgroundColor": "transparent",
    "bold"           : true,
    "italic"         : true
  },
  {
    "tag"            : "?",
    "color"          : "#879da4",
    "strikethrough"  : false,
    "underline"      : false,
    "backgroundColor": "transparent",
    "bold"           : false,
    "italic"         : false
  },
  {
    "tag"            : "//",
    "color"          : "#474747",
    "strikethrough"  : true,
    "underline"      : false,
    "backgroundColor": "transparent",
    "bold"           : false,
    "italic"         : false
  },
  {
    "tag"            : "todo",
    "color"          : "#FF8C00",
    "strikethrough"  : false,
    "underline"      : false,
    "backgroundColor": "transparent",
    "bold"           : false,
    "italic"         : false
  },
  {
    "tag"            : "*",
    "color"          : "#ccffcb",
    "strikethrough"  : false,
    "underline"      : true,
    "backgroundColor": "transparent",
    "bold"           : true,
    "italic"         : false
  },

  {
    "tag"            : "※",
    "color"          : "rgba(0,255,251,1)",
    "strikethrough"  : false,
    "underline"      : false,
    "backgroundColor": "transparent",
    "bold"           : true,
    "italic"         : false

  },{
    "tag"            : ":∷∷∷∷",
    "color"          : "#0300ff",
    "strikethrough"  : false,
    "underline"      : false,
    "backgroundColor": "transparent",
    "bold"           : true,
    "italic"         : false

  }

],

  "editor.fontFamily"                         : "Fira Code Medium",
  "editor.fontLigatures"                      : true,
  "editor.fontSize"                           : 16,
  "editor.suggestFontSize"                    : 14,
  "php.validate.executablePath"               : "",                      // in modern version
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.sideBar.location"                : "left",
  "explorer.confirmDelete"                    : false,
  "python.insidersChannel"                    : "daily",
  "python.pythonPath"                         : "/usr/bin/python3",
  "jupyter.askForLargeDataFrames"             : true,
  "workbench.statusBar.visible"               : true,
  "workbench.editorAssociations"              : {
  "*.ipynb": "jupyter-notebook"
},
"python.analysis.typeCheckingMode": "basic",
"[typescriptreact]": {
  "editor.defaultFormatter": "vscode.typescript-language-features"
},
"[typescript]": {
  "editor.defaultFormatter": "vscode.typescript-language-features"
},
"[json]": {
  "editor.defaultFormatter": "vscode.json-language-features",
  "editor.wordWrap"        : "wordWrapColumn",
  "editor.wrappingIndent"  : "same",
  "editor.wordWrapColumn"  : 100,
},
"editor.tabSize"              : 4,
"editor.cursorStyle"          : "line",
"editor.insertSpaces"         : true,
"editor.lineNumbers"          : "on",
"editor.wordSeparators"       : "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
"editor.wordWrap"             : "off",
"notebook.cellToolbarLocation": {
  "default"         : "right",
  "jupyter-notebook": "left"
},
"python.defaultInterpreterPath": "/usr/bin/python3",
"workbench.welcomePage.walkthroughs.openOnInstall": false,
   "editor.quickSuggestions": {
        "other"   : true,
        "comments": true,
        "strings" : true
    },
     // Controls whether suggestions should be accepted on commit characters. For example, in JavaScript, the semi-colon (`;`) can be a commit character that accepts a suggestion and types that character.
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.acceptSuggestionOnEnter"          : "on",
    "editor.quickSuggestionsDelay"            : 0,
    "editor.suggestOnTriggerCharacters"       : true,
    "editor.tabCompletion"                    : "on",
    "editor.suggest.localityBonus"            : true,
    "editor.suggestSelection"                 : "first",
    "editor.wordBasedSuggestions"             : true,
    "editor.parameterHints.enabled": true,

    "terminal.integrated.enableBell": false,
    "docsView.documentationView.updateMode": "live",
    "gitlens.defaultGravatarsStyle": "wavatar",
    "gitlens.codeLens.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "[rust]": {
      "editor.defaultFormatter": "matklad.rust-analyzer"
    },
    "[zig]": {
      "editor.defaultFormatter": "tiehuis.zig"
    },
    "rust-analyzer.inlayHints.enable": false,
    "rust-analyzer.inlayHints.chainingHints": false,
    "rust-analyzer.hoverActions.run": false,
    "rust-analyzer.lens.implementations": false,
    "rust-analyzer.hoverActions.implementations": false,
    "rust-analyzer.lens.run": false,
    "rust-analyzer.lens.debug": false,
    "git.autofetch": true,
    "workbench.colorTheme": "Nord",
    "workbench.productIconTheme": "icons-carbon",
    "workbench.editor.enablePreview": false,
    "[c]": {
      "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "git.enableCommitSigning": true,
    "git.alwaysSignOff": true
}